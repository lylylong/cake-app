<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="pt-3">
    Edit Your Order: <span class="current-order">{{post.title}}</span>
  </h2>

  <form class="edit-post-form">

    <form class="container edit-post-form">
      <div class="row align-items-start">
        <div class="col-md-4">
          <label for="post-title" class="mt-4">Change Cake Flavour</label>
          {{!-- <input type="text" id="post-title" name="post-title" /> --}}
          <select class="browser-default custom-select" name="flavour" id="flavour">
            <option selected>Select Flavour</option>
            <option value="Chocolate">Chocolate ðŸŒŸ</option>
            <option value="Vanilla">Vanilla</option>
            <option value="Strawberry">Strawberry</option>
            <option value="Butterscotch">Butterscotch ðŸ†•</option>
            <option value="Matcha">Matcha ðŸ†•</option>
          </select>

        </div>
        <div class="col-md-4">
          <label for="post-title" class="mt-4">Change Cake Category</label>
          <select class="browser-default custom-select" name="category" id="category">
            <option selected>Select Category</option>
            <option value="Cake">Cake ðŸŒŸ</option>
            <option value="Cheesecake">Cheesecake</option>
            <option value="Mille Crepe">Mille Crepe</option>
            <option value="Swiss Roll">Swiss Roll</option>
            <option value="Tiramisu">Tiramisu</option>
          </select>
        </div>

        <div class="col-md-4 form-group">
          <label for="pickup-date" class="mt-4">Pick-up Date</label>
          <input type="text" id="pickup-date" name="pickup-date" placeholder="Select Pickup Date" autocomplete="off"
            class="custom-select" />
        </div>
      </div>
      <div class="row">
        <button type="submit" class="edit-btn mt-2">Save Changes</button>
        <button type="button" class="delete-post-btn mt-2">Delete Order</button>
      </div>
      <div class="row">
        <div class="order-sum mt-2">
          Order created on {{format_date post.created_at}}
          <br>
          {{post.vote_count}} {{format_plural "like" post.vote_count}}
          |
          <a href="/gallery/post/{{post.id}}">{{post.comments.length}}
            {{format_plural "comment" post.comments.length}}</a>
        </div>
      </div>
    </form>

  </form>

</article>

