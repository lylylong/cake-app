{{#if posts.length}}
<section>
  <h2 class="order-title mt-5">Your History Orders</h2>
  <ol class="order-ol">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

