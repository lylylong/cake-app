<div class="container">
  <div class="row">
    <form class="login-form col-lg-6">
      <div>
        <h4 class="text-purple">Good to see you again!</h4>
      </div>
      <div>
        <label for="email-login" class="mt-3">Email:</label>
        <input type="text" id="email-login" class="login-input" />
      </div>
      <div>
        <label for="password-login">Password:</label>
        <input type="password" id="password-login" class="login-input" />
      </div>
      <div>
        <button type="submit" class="mt-3 bg-purple">Login</button>
      </div>
    </form>

    <form class="signup-form col-lg-6">
      <div>
        <h4 class="text-pink">New here? Create account!</h4>
      </div>
      <div>
        <label for="username-signup" class="mt-3">Username:</label>
        <input type="text" id="username-signup" class="login-input" />
      </div>
      <div>
        <label for="email-signup">Email:</label>
        <input type="text" id="email-signup" class="login-input" />
      </div>
      <div>
        <label for="password-signup">Password:</label>
        <input type="password" id="password-signup" class="login-input" />
      </div>
      <div>
        <button type="submit" class="mt-3 bg-pink">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/javascript/login.js"></script>